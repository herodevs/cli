{
  "name": "@herodevs/cli",
  "version": "1.0.0-beta.0",
  "author": "HeroDevs, Inc",
  "bin": {
    "hd": "./bin/run.js"
  },
  "type": "module",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "ci": "biome ci",
    "ci:fix": "biome check --write",
    "clean": "shx rm -rf dist && npm run clean:files && shx rm -rf node_modules",
    "clean:files": "shx rm -f nes.**.csv nes.**.json nes.**.text",
    "dev": "npm run build && ./bin/dev.js",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "pretest": "npm run lint && npm run typecheck",
    "readme": "npm run ci:fix && npm run build && npm exec oclif readme",
    "test": "node --disable-warning=ExperimentalWarning --experimental-strip-types --test \"test/**/*.test.ts\"",
    "typecheck": "tsc --noEmit",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "graphql": "^16.8.1",
    "inquirer": "^12.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@oclif/test": "^4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22",
    "@types/sinon": "^17.0.4",
    "oclif": "^4",
    "shx": "^0.3.3",
    "sinon": "^19.0.2",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "LICENSE"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "oclif": {
    "bin": "hd",
    "dirname": "hd",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-update"
    ],
    "topicSeparator": " ",
    "update": {
      "node": {
        "version": ">=22.0.0"
      }
    }
  },
  "types": "dist/index.d.ts"
}
