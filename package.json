{
  "name": "@herodevs/cli",
  "description": "The HeroDevs CLI",
  "version": "2.0.0",
  "author": "HeroDevs, Inc",
  "bin": {
    "hd": "./bin/run.js"
  },
  "type": "module",
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "ci": "biome ci",
    "ci:fix": "biome check --write",
    "clean": "shx rm -rf dist && npm run clean:files && shx rm -rf node_modules",
    "clean:files": "shx rm -f nes.purls.csv nes.purls.json nes.sbom.json",
    "dev": "npm run build && ./bin/dev.js",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "pretest": "npm run lint && npm run typecheck",
    "readme": "npm run ci:fix && npm run build && npm exec oclif readme",
    "test": "node --disable-warning=ExperimentalWarning --experimental-strip-types --test \"test/**/*.test.ts\"",
    "typecheck": "tsc --noEmit",
    "version": "oclif readme && git add README.md"
  },
  "bugs": "https://github.com/@herodevs/cli/issues",
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "@cyclonedx/cdxgen": "^11.2.0",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "cli-table3": "^0.6.5",
    "inquirer": "^12.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@oclif/test": "^4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22",
    "@types/sinon": "^17.0.4",
    "oclif": "^4",
    "shx": "^0.3.3",
    "sinon": "^19.0.2",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "homepage": "https://github.com/@herodevs/cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "oclif": {
    "bin": "hd",
    "dirname": "hd",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    },
    "hooks": {
      "prerun": "./dist/hooks/prerun/command-context-hook"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/herodevs/cli.git"
  },
  "types": "dist/index.d.ts"
}
