{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [ "src/**/*", "types/**/*.d.ts" ],
  "exclude": [ "src/**/*.test.ts", "src/**/*.spec.ts", "test/**/*" ]
}
